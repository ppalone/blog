---
interface Props {
  title: string;
  description: string;
}

import Base from "./base.astro";
const { title, description } = Astro.props;
---

<Base title={title} description={description}>
  <!-- root -->
  <div class="container mx-auto flex flex-col h-full">
    <!-- top navigation -->
    <nav class="py-4 border-b">
      <div class="p-4 flex justify-between">
        <a href="/" class="text-2xl font-bold">🍉</a>
        <button>🌙</button>
      </div>
    </nav>
    <!-- main -->
    <main class="flex-1">
      <slot />
    </main>
    <!-- footer -->
    <footer class="p-4 flex justify-between border-t">
      <div>Copyright 2023 &copy; Pranjal Alone</div>
      <div class="flex gap-2">
        <a class="link" href="https://github.com/ppalone/blog">GitHub</a>
        <a class="link" href="/rss.xml">RSS</a>
      </div>
    </footer>
  </div>
</Base>
